{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd backend && export PYTHONPATH=$PYTHONPATH:.. && python run_server.py",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Uvicorn running on",
                    "endsPattern": "Application startup complete"
                }
            },
            "presentation": {
                "group": "server"
            }
        },
        {
            "label": "Install Frontend Dependencies",
            "type": "shell",
            "command": "cd frontend/nextjs && npm install --legacy-peer-deps",
            "presentation": {
                "group": "build"
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "cd frontend/nextjs && npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "ready started server on",
                    "endsPattern": "ready started server on"
                }
            },
            "presentation": {
                "group": "server"
            }
        },
        {
            "label": "Start Project",
            "dependsOn": ["Start Backend", "Start Frontend"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}